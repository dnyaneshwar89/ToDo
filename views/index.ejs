<!DOCTYPE html> 
<html lang="en" dir="ltr"> 
  
<head> 
    <meta charset="utf-8"> 
    <title>todo</title> 
    <link rel="stylesheet" scr="/index.css"> 
    
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href= 
"https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"> 
</head> 
  
<body> 
    <div class="container"> 
        <h1 class="row"> 
                
          TODO APP  
               
        </h1> 
        <br/><br/> 
        <div class="row"> 
            <form action="/" class="form-inline col-sm-offset-3" method="POST"> 
                <div class="input-group"> 
                    <span class="input-group-addon"> 
                      <i class="glyphicon glyphicon-pencil"></i> 
                    </span> 
                    <input type="text" class="form-control"
                           placeholder="todo-item" 
                           id="box" style="width: 30vw" name="content"/> 
                </div> 
                <div class="form-group"> 
                    <button type="submit">  <span class="fas fa-plus btn btn-primary form-control" style="width: 60px">Add</span></button> 
                </div> 
            </form> 
        </div> 
        <div class="row">
            <% tasks.forEach(task => { %>
            <ul class="list-group" id="list_item">
                <!--
                    if a task is incomplete it gets a danger color(light red) or plain white if complete
                    every task  can be marked as complete or incomplete
                -->
                    <li class="list-group-item todo-list-item <%= task.isComplete ? '' : 'list-group-item-danger' %>"><input disabled type="text" value="<%= task.content%>" name="content"> <a href="/edit/<%= task._id %>" >Edit</a> 
                        <a href="/delete/<%= task._id%>">Delete</a>
                        <!--depending on if task is completed or not it is sent to proper route foe e.g. if it is completed task then it is sent at
                            edit/mark-incomplete and vice versa
                        -->
                        <a href='/<%= task.isComplete ? "mark-incomplete" : "mark-complete" %>/<%= task._id%>'><%= task.isComplete ? 'Mark as InComplete' : 'Mark as Complete' %></a>
                    </li> 
                        
            </ul> 
            <% }) %>
        </div> 
    </div> 
</body> 
  
</html>